# docker/Dockerfile.web
FROM node:20-slim

# Install curl so we can test the internet connection inside the build
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files first for better caching
COPY frontend/package.json ./

# Install dependencies
RUN npm install

# Copy the rest of the frontend code
COPY frontend/ .

# Expose the port used by Vite/Tauri (default is often 1420 or 5173)
EXPOSE 1420

# Start the development server
# We use --host to ensure it listens outside the container
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "1420"]
